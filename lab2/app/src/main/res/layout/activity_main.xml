<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/btnGoToKeoBuaGiay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="goToKbg"
            android:text="Keo bua giay"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btnGoToDayFibonacci"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="goToDayFibonacci"
            android:text="day fibonacci"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btnGoToThongTinSinhVien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="gotoThongTinSinhVien"
            android:text="thong tin sinh vien"
            tools:ignore="MissingConstraints" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>