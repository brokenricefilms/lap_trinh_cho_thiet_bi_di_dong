<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/col_app_bgr"
    android:orientation="vertical"
    android:weightSum="5.5"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0pt"
        android:layout_margin="6pt"
        android:layout_weight="1.5"
        android:background="@color/col_scr_bgr"
        android:gravity="end|center_vertical"
        android:padding="6pt"
        android:text="0"
        android:textColor="@color/col_scr_txt"
        android:textSize="18pt" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0pt"
        android:layout_margin="3pt"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:layout_width="0pt"
            android:layout_height="match_parent"
            android:layout_margin="3pt"
            android:layout_weight="1"
            android:backgroundTint="@color/col_num_bgr"
            android:text="7"
            android:textColor="@color/col_num_txt"
            android:textSize="13pt"
            android:textStyle="bold" />

        <Button
            android:layout_width="0pt"
            android:layout_height="match_parent"
            android:layout_margin="3pt"
            android:layout_weight="1"
            android:backgroundTint="@color/col_num_bgr"
            android:text="8"
            android:textColor="@color/col_num_txt"
            android:textSize="13pt"
            android:textStyle="bold" />

        <Button
            android:layout_width="0pt"
            android:layout_height="match_parent"
            android:layout_margin="3pt"
            android:layout_weight="1"
            android:backgroundTint="@color/col_num_bgr"
            android:text="9"
            android:textColor="@color/col_num_txt"
            android:textSize="13pt"
            android:textStyle="bold" />

        <Button
            android:layout_width="0pt"
            android:layout_height="match_parent"
            android:layout_margin="3pt"
            android:layout_weight="1"
            android:backgroundTint="@color/col_ope_bgr"
            android:text="-"
            android:textColor="@color/col_ope_txt"
            android:textSize="13pt"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0pt"
        android:layout_margin="3pt"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:layout_width="0pt"
            android:layout_height="match_parent"
            android:layout_margin="3pt"
            android:layout_weight="1"
            android:backgroundTint="@color/col_num_bgr"
            android:text="4"
            android:textColor="@color/col_num_txt"
            android:textSize="13pt"
            android:textStyle="bold" />

        <Button
            android:layout_width="0pt"
            android:layout_height="match_parent"
            android:layout_margin="3pt"
            android:layout_weight="1"
            android:backgroundTint="@color/col_num_bgr"
            android:text="5"
            android:textColor="@color/col_num_txt"
            android:textSize="13pt"
            android:textStyle="bold" />

        <Button
            android:layout_width="0pt"
            android:layout_height="match_parent"
            android:layout_margin="3pt"
            android:layout_weight="1"
            android:backgroundTint="@color/col_num_bgr"
            android:text="6"
            android:textColor="@color/col_num_txt"
            android:textSize="13pt"
            android:textStyle="bold" />

        <Button
            android:layout_width="0pt"
            android:layout_height="match_parent"
            android:layout_margin="3pt"
            android:layout_weight="1"
            android:backgroundTint="@color/col_ope_bgr"
            android:text="/"
            android:textColor="@color/col_ope_txt"
            android:textSize="13pt"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0pt"
        android:layout_margin="3pt"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:layout_width="0pt"
            android:layout_height="match_parent"
            android:layout_margin="3pt"
            android:layout_weight="1"
            android:backgroundTint="@color/col_num_bgr"
            android:text="1"
            android:textColor="@color/col_num_txt"
            android:textSize="13pt"
            android:textStyle="bold" />

        <Button
            android:layout_width="0pt"
            android:layout_height="match_parent"
            android:layout_margin="3pt"
            android:layout_weight="1"
            android:backgroundTint="@color/col_num_bgr"
            android:text="2"
            android:textColor="@color/col_num_txt"
            android:textSize="13pt"
            android:textStyle="bold" />

        <Button
            android:layout_width="0pt"
            android:layout_height="match_parent"
            android:layout_margin="3pt"
            android:layout_weight="1"
            android:backgroundTint="@color/col_num_bgr"
            android:text="3"
            android:textColor="@color/col_num_txt"
            android:textSize="13pt"
            android:textStyle="bold" />

        <Button
            android:layout_width="0pt"
            android:layout_height="match_parent"
            android:layout_margin="3pt"
            android:layout_weight="1"
            android:backgroundTint="@color/col_ope_bgr"
            android:text="x"
            android:textColor="@color/col_ope_txt"
            android:textSize="13pt"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0pt"
        android:layout_margin="3pt"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:layout_width="0pt"
            android:layout_height="match_parent"
            android:layout_margin="3pt"
            android:layout_weight="1"
            android:backgroundTint="@color/col_num_bgr"
            android:text="0"
            android:textColor="@color/col_num_txt"
            android:textSize="13pt"
            android:textStyle="bold" />

        <Button
            android:layout_width="0pt"
            android:layout_height="match_parent"
            android:layout_margin="3pt"
            android:layout_weight="1"
            android:backgroundTint="@color/col_num_bgr"
            android:text="."
            android:textColor="@color/col_num_txt"
            android:textSize="13pt"
            android:textStyle="bold" />

        <Button
            android:layout_width="0pt"
            android:layout_height="match_parent"
            android:layout_margin="3pt"
            android:layout_weight="1"
            android:backgroundTint="@color/col_ope_bgr"
            android:text="="
            android:textColor="@color/col_ope_txt"
            android:textSize="13pt"
            android:textStyle="bold" />

        <Button
            android:layout_width="0pt"
            android:layout_height="match_parent"
            android:layout_margin="3pt"
            android:layout_weight="1"
            android:backgroundTint="@color/col_ope_bgr"
            android:text="+"
            android:textColor="@color/col_ope_txt"
            android:textSize="13pt"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>